@model CRUDwSecurityCore.ViewModels.LoginViewModel

<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <h3>Login</h3>
        <form novalidate method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" placeholder="Usuário" class="form-control" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" placeholder="Senha" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-lg btn-success" />
            </div>
        </form>
    </div>
</div>
